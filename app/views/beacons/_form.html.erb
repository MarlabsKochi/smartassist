<%= form_for @beacon, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :uuid, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :uuid, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :major_number, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :major_number, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :minor_number, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :minor_number, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :service_point_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :service_point_name, :class => 'text_field form-control' %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :message, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :message, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  beacons_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
