<%- model_class = Beacon -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:uuid) %></dt>
      <dd><pre class="prettyprint"><%= @beacon.uuid %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:major_number) %></dt>
      <dd><pre class="prettyprint"><%= @beacon.major_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:minor_number) %></dt>
      <dd><pre class="prettyprint"><%= @beacon.minor_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:service_point_name) %></dt>
      <dd><pre class="prettyprint"><%= @beacon.service_point_name %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              beacons_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_beacon_path(@beacon), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              beacon_path(@beacon),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>